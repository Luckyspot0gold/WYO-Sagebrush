#!/bin/bash

# Check critical files
files=(
  "core/sagebrush_sniper.py"
  "app.py"
  "requirements.txt"
  "HACKATHON_PLAN.md"
)

for file in "${files[@]}"; do
  if [ -f "$file" ]; then
    echo "✅ Found $file"
  else
    echo "❌ Missing $file"
  fi
done

# Check for Modal project (if in a subdir or separate)
if [ -d "sagebrush_sleeper" ]; then
  echo "✅ Found sagebrush_sleeper directory"
  sleeper_files=("sagebrush_sleeper/app.py" "sagebrush_sleeper/requirements.txt")
  for sfile in "${sleeper_files[@]}"; do
    if [ -f "$sfile" ]; then
      echo "✅ Found $sfile"
    else
      echo "❌ Missing $sfile"
    fi
  done
else
  echo "⚠️ sagebrush_sleeper directory not found"
fi
